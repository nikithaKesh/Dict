<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WordVault | My Personal Dictionary</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .glass-effect { background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px); }
    </style>
</head>
<body class="bg-slate-50 text-slate-900 min-h-screen">

    <div id="login-screen" class="fixed inset-0 z-50 flex items-center justify-center bg-indigo-600">
        <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-md text-center">
            <div class="mb-6">
                <div class="bg-indigo-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="Writer" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-slate-800">WordVault</h1>
                <p class="text-slate-500">Master your vocabulary daily.</p>
            </div>
            <input id="username-input" type="text" placeholder="Your Name" class="w-full p-3 border border-slate-200 rounded-lg mb-4 focus:ring-2 focus:ring-indigo-500 outline-none transition-all">
            <button onclick="handleLogin()" class="w-full bg-indigo-600 text-white font-semibold py-3 rounded-lg hover:bg-indigo-700 transition-colors">Start Learning</button>
        </div>
    </div>

    <div id="app-content" class="hidden">
        <nav class="bg-white border-b border-slate-200 sticky top-0 z-40">
            <div class="max-w-4xl mx-auto px-4 h-16 flex items-center justify-between">
                <span class="font-bold text-xl text-indigo-600">WordVault</span>
                <div class="flex items-center gap-4">
                    <span class="text-sm font-medium text-slate-600">Hi, <span id="display-name" class="text-indigo-600"></span></span>
                    <button onclick="handleLogout()" class="text-xs text-red-500 font-bold uppercase tracking-wider">Logout</button>
                </div>
            </div>
        </nav>

        <main class="max-w-4xl mx-auto p-4 md:p-8">
            <div class="relative group mb-12">
                <input id="search-box" type="text" placeholder="Type a word (e.g., 'Resilient')..." 
                    class="w-full p-5 pl-12 rounded-2xl border-0 shadow-lg ring-1 ring-slate-200 focus:ring-2 focus:ring-indigo-500 outline-none text-lg transition-all"
                    onkeypress="if(event.key === 'Enter') performSearch()">
                <div class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
                <button onclick="performSearch()" class="absolute right-3 top-1/2 -translate-y-1/2 bg-indigo-600 text-white px-5 py-2 rounded-xl font-medium hover:bg-indigo-700 transition-all">Search</button>
            </div>

            <div id="result-area" class="hidden mb-12 animate-in fade-in slide-in-from-bottom-4 duration-500">
                <div class="bg-white rounded-3xl p-8 shadow-xl border border-slate-100 relative overflow-hidden">
                    <div class="absolute top-0 right-0 p-4">
                        <button onclick="saveCurrentWord()" class="flex items-center gap-2 bg-emerald-50 text-emerald-700 px-4 py-2 rounded-full font-bold text-sm hover:bg-emerald-100 transition-all">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                            </svg>
                            Mark as Learned
                        </button>
                    </div>
                    <div id="word-info">
                        </div>
                </div>
            </div>

            <section>
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-slate-800">My Learned Words</h3>
                    <span id="word-count" class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-xs font-bold">0 Words</span>
                </div>
                <div id="learned-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
                    </div>
            </section>
        </main>
    </div>

    <script>
        const API_URL = "https://api.dictionaryapi.dev/api/v2/entries/en/";
        let currentWordData = null;
        let learnedList = JSON.parse(localStorage.getItem('myLearnedWords')) || [];

        // --- AUTH LOGIC ---
        function handleLogin() {
            const name = document.getElementById('username-input').value.trim();
            if (name) {
                localStorage.setItem('dictionaryUser', name);
                initApp(name);
            }
        }

        function handleLogout() {
            localStorage.removeItem('dictionaryUser');
            location.reload();
        }

        function initApp(name) {
            document.getElementById('login-screen').classList.add('hidden');
            document.getElementById('app-content').classList.remove('hidden');
            document.getElementById('display-name').innerText = name;
            renderLearnedGrid();
        }

        // Check login on load
        window.onload = () => {
            const savedUser = localStorage.getItem('dictionaryUser');
            if (savedUser) initApp(savedUser);
        };

        // --- SEARCH LOGIC ---
        async function performSearch() {
            const word = document.getElementById('search-box').value.trim();
            if (!word) return;

            const resultArea = document.getElementById('result-area');
            const wordInfo = document.getElementById('word-info');

            try {
                const response = await fetch(`${API_URL}${word}`);
                const data = await response.json();

                if (data.title === "No Definitions Found") {
                    alert("Sorry, we couldn't find that word.");
                    return;
                }

                currentWordData = data[0];
                resultArea.classList.remove('hidden');
                
                const partOfSpeech = currentWordData.meanings[0].partOfSpeech;
                const definition = currentWordData.meanings[0].definitions[0].definition;
                const phonetic = currentWordData.phonetic || "";

                wordInfo.innerHTML = `
                    <span class="text-indigo-500 font-bold uppercase tracking-widest text-xs">${partOfSpeech}</span>
                    <h2 class="text-5xl font-extrabold text-slate-900 mt-1 mb-2 capitalize">${currentWordData.word}</h2>
                    <p class="text-slate-400 font-medium mb-6">${phonetic}</p>
                    <div class="bg-slate-50 p-6 rounded-2xl border-l-4 border-indigo-500">
                        <p class="text-lg text-slate-700 leading-relaxed">${definition}</p>
                    </div>
                `;
            } catch (err) {
                console.error("Fetch Error:", err);
            }
        }

        // --- LEARNED WORDS LOGIC ---
        function saveCurrentWord() {
            if (currentWordData && !learnedList.includes(currentWordData.word)) {
                learnedList.unshift(currentWordData.word);
                localStorage.setItem('myLearnedWords', JSON.stringify(learnedList));
                renderLearnedGrid();
                
                // Visual feedback
                document.getElementById('result-area').classList.add('hidden');
                document.getElementById('search-box').value = "";
            }
        }

        function deleteWord(word) {
            learnedList = learnedList.filter(w => w !== word);
            localStorage.setItem('myLearnedWords', JSON.stringify(learnedList));
            renderLearnedGrid();
        }

        function renderLearnedGrid() {
            const grid = document.getElementById('learned-grid');
            const countLabel = document.getElementById('word-count');
            
            countLabel.innerText = `${learnedList.length} Words`;
            
            if (learnedList.length === 0) {
                grid.innerHTML = `<p class="col-span-full text-slate-400 text-center py-10 italic">No words learned yet. Start searching!</p>`;
                return;
            }

            grid.innerHTML = learnedList.map(word => `
                <div class="bg-white p-4 rounded-xl border border-slate-200 flex justify-between items-center group hover:border-indigo-300 transition-all">
                    <span class="font-semibold text-slate-700 capitalize">${word}</span>
                    <button onclick="deleteWord('${word}')" class="text-slate-300 hover:text-red-500 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            `).join('');
        }
    </script>
</body>
</html>
